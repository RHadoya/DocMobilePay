<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payer la consultation"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginTop="30sp"
            android:textColor="@color/bluebold"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="40sp"
            android:text="Veuillez rapprocher votre smartphone au smartphone du médecin pour commencer le paiement:"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:width="400sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solde: "
                android:textSize="12dp"
                android:layout_centerInParent="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 000 000"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_centerInParent="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Eur"
                android:textSize="12dp"
                android:layout_centerInParent="true"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Montant à payer:"
                android:textSize="12dp"/>


            <EditText
                android:id="@+id/montantconsultation"
                android:layout_height="50dp"
                android:layout_width="120dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text=" Eur"
                android:textSize="12dp"
                android:layout_centerInParent="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/info_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="40sp"
            android:text=""
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:width="400sp"
            />
    </LinearLayout>


</RelativeLayout>